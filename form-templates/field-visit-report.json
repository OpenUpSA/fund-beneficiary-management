{
  "title": "Field Reporting Form",
  "sections": [
    {
      "title": "Details of site visit",
      "fields": [
        {
          "name": "Funder",
          "type": "multiselect",
          "label": "Funder",
          "config": {
            "dynamicOptionTable": "funders"
          },
          "required": true,
          "placeholder": "Select funders"
        },
        {
          "name": "venue",
          "type": "text",
          "label": "Venue",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "date_of_visit",
          "type": "date",
          "label": "Date of visit",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "staff_representatives_met",
          "type": "radio",
          "label": "Did you meet with any staff representatives?",
          "options": [
            {
              "label": "No",
              "value": "no"
            },
            {
              "label": "Yes",
              "value": "yes"
            }
          ],
          "required": true
        },
        {
          "name": "staff_representatives_met_list",
          "type": "multiselect",
          "label": "Staff representatives met",
          "config": {
            "dynamicOptionTable": "staff_members"
          },
          "required": true,
          "placeholder": "Select staff representatives met",
          "show_if": {
            "field": "staff_representatives_met",
            "value": "yes"
          }
        },
        {
          "name": "committee_representatives_met",
          "type": "radio",
          "label": "Did you meet with any committee representatives?",
          "options": [
            {
              "label": "No",
              "value": "no"
            },
            {
              "label": "Yes",
              "value": "yes"
            }
          ],
          "required": true
        },
        {
          "name": "committee_representatives_met_list",
          "type": "multiselect",
          "label": "Committee representatives met",
          "config": {
            "dynamicOptionTable": "committee_members"
          },
          "required": true,
          "placeholder": "Select committee representatives met",
          "show_if": {
            "field": "committee_representatives_met",
            "value": "yes"
          }
        }
      ]
    },
    {
      "title": "Visit notes",
      "fields": [
        {
          "name": "org_profile_changed",
          "type": "radio",
          "label": "Has the organisational profile changed recently?",
          "options": [
            {
              "label": "No",
              "value": "no"
            },
            {
              "label": "Yes",
              "value": "yes"
            }
          ],
          "required": true
        },
        {
          "name": "updated_org_profile",
          "type": "textarea",
          "label": "Updated organisational profile",
          "show_if": {
            "field": "org_profile_changed",
            "value": "yes"
          },
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "visit_objectives",
          "type": "textarea",
          "label": "Objectives of the visit",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "programme_activities",
          "type": "textarea",
          "label": "Programme activities and highlights",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "community_profile",
          "type": "textarea",
          "label": "Community profile",
          "required": true,
          "placeholder": "Enter details here"
        }
      ]
    },
    {
      "title": "Governance and management",
      "fields": [
        {
          "name": "systems_controls",
          "type": "textarea",
          "label": "Systems and controls",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "current_funders",
          "type": "textarea",
          "label": "Current funders",
          "required": true,
          "placeholder": "Enter details here"
        }
      ]
    },
    {
      "title": "Next steps",
      "fields": [
        {
          "name": "way_forward",
          "type": "textarea",
          "label": "Way forward",
          "required": true,
          "placeholder": "Enter details here"
        },
        {
          "name": "next_visit_date",
          "type": "date",
          "label": "Date for next visit",
          "required": true
        }
      ]
    },
    {
      "title": "Evidence",
      "fields": [
        {
          "name": "attendance_register",
          "type": "fileUpload",
          "label": "Upload attendance register",
          "multiple": true,
          "required": false,
          "accepted_file_types": [
            "image/*",
            "application/pdf"
          ]
        },
        {
          "name": "visit_photos",
          "type": "fileUpload",
          "label": "Upload photos from visit",
          "multiple": true,
          "required": true,
          "accepted_file_types": [
            "image/*"
          ]
        }
      ]
    }
  ]
}